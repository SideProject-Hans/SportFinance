@page "/"

<PageTitle>現金流管理</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">現金流管理</MudText>

<MudDataGrid T="CashFlow" Items="@CashFlows" Filterable="true" SortMode="SortMode.Multiple" Hover="true" Dense="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">現金流紀錄</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="RefreshDataAsync" />
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="編號" Sortable="true" Filterable="false" />
        <PropertyColumn Property="x => x.CreateDay" Title="建立日期" Format="yyyy/MM/dd HH:mm" Sortable="true" />
        <PropertyColumn Property="x => x.Department" Title="申請部門" Sortable="true" />
        <PropertyColumn Property="x => x.Applicant" Title="申請人" Sortable="true" />
        <PropertyColumn Property="x => x.Reason" Title="申請原因" />
        <PropertyColumn Property="x => x.Expense" Title="支出金額" Format="N2" />
        <PropertyColumn Property="x => x.Income" Title="收入金額" Format="N2" />
        <PropertyColumn Property="x => x.Fee" Title="手續費" Format="N2" />
        <PropertyColumn Property="x => x.NetAmount" Title="淨金額" Format="N2" Sortable="false" Filterable="false" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="CashFlow" />
    </PagerContent>
</MudDataGrid>

