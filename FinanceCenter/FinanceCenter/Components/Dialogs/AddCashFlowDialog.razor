@using FinanceCenter.Data.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">新增現金流紀錄</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_isValid">
            <MudTextField @bind-Value="CashFlow.Department" Label="申請部門" Required="true" RequiredError="請輸入申請部門" />
            <MudTextField @bind-Value="CashFlow.Applicant" Label="申請人" Required="true" RequiredError="請輸入申請人" />
            <MudTextField @bind-Value="CashFlow.Reason" Label="申請原因" Required="true" RequiredError="請輸入申請原因" Lines="3" />
            <MudNumericField @bind-Value="CashFlow.Income" Label="收入金額" Format="N2" Min="0" />
            <MudNumericField @bind-Value="CashFlow.Expense" Label="支出金額" Format="N2" Min="0" />
            <MudNumericField @bind-Value="CashFlow.Fee" Label="手續費" Format="N2" Min="0" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="Color.Primary" Disabled="@(!_isValid)" OnClick="Submit">確定</MudButton>
    </DialogActions>
</MudDialog>
